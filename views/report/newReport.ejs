<%- include ("../partials/header")%>
<% var d = new Date()%>
<%var month  =  d.getMonth()+1%>
<%var hour  =  d.getHours();%>
<%var minutes  =  d.getMinutes();%>
<%var year  =   d.getFullYear();%>
<%var date  =   d.getDate();%>

<%var datestring = date+ "-" + month+ "-" +year+ "    " +hour + ":" +minutes%>

<div class="container">

    <div style="width:70%; margin: 100px auto;padding: 4px;;text-align: center;">
        <h1 style="text-align: center;"> טופס מעקב </h1>

        <form action="/agent/<%=agents.id%>/report" method="POST">

            <table class="table table-hover table-dark">
                <thead>
                    <tr>

                        <th colspan="2"><%=datestring%></th>
                    </tr>
                </thead>
                <tbody>
                    <div class="form-group">
                        <tr>
                            <td>פגישות </td>
                            <td><input type="number" class="form-control" name="meeting" required></td>
                        </tr>
                    <tr>
                        <td>הדבקת פליירים </td>
                        <td><input type="number" class="form-control" name="stickerFlyers"></td>
                    </tr>
                    <tr>
                        <td>למידה והתחדשות</td>
                        <td><input type="number" class="form-control" name="learninGandRenewal"></td>
                    </tr>
                    <tr>
                        <td>משא ומתן בתהליך </td>
                        <td><input type="number" class="form-control" name="negotiationsInTheProcess"></td>
                    </tr>
                    <tr>
                        <td>עסקאות בפועל </td>
                        <td><input type="number" class="form-control" name="actualTransactions"></td>
                    </tr>
                    <tr>
                        <td>סיורי שוכרים </td>
                        <td><input type="number" class="form-control" name="rentalTours"></td>
                    </tr>
                    <tr>
                        <td>שתופי פעולה </td>
                        <td><input type="number" class="form-control" name="collaborations"></td>
                    </tr>
                    <tr>
                        <td>שיחות ללקוחות קודמים </td>
                        <td><input type="number" class="form-control" required name="conversationsWithPreviousClients">
                        </td>
                    </tr>
                    <tr>
                        <td>הצעות מחיר </td>
                        <td><input type="number" class="form-control" name="pricesOffer"></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input type="text" class="form-control" name="remarks" placeholder="הערות ">
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <button class="btn btn-lg btn-dark btn-block " onclick="sendAlert()">שלח טופס</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group">
             
            </div>


        </form>

    </div>
</div>

<script>
    function sendAlert() {
        alert("האם ברצונך לאשר את הדוח ?");
    };
</script>
<%- include ("../partials/footer")%>